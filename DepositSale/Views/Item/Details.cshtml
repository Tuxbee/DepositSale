@model DepositSale.Models.Item

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Item -
    @if (Model.ItemType == DepositSale.Models.ItemType.Garment)
    { 
       <text>Garment</text> 
    }
    else
    {
       <text>Other</text>
    }
    </h4>
    <hr />
    <dl class="dl-horizontal">
       <dt>
          @Html.DisplayNameFor(model => model.ID)
       </dt>

       <dd>
          @Html.DisplayFor(model => model.ID)
       </dd>

       <dt>
          @Html.DisplayNameFor(model => model.Description)
       </dt>

       <dd>
          @Html.DisplayFor(model => model.Description)
       </dd>

       <dt>
          @Html.DisplayNameFor(model => model.CatalogPrice)
       </dt>

       <dd>
          @Html.DisplayFor(model => model.CatalogPrice)
       </dd>

       @if (Model.ItemType == DepositSale.Models.ItemType.Garment)
       {
          DepositSale.Models.Garment garment = (DepositSale.Models.Garment)(Model);
          <dt>
             @Html.DisplayNameFor(model => garment.ColorName)
          </dt>

          <dd>
             @Html.DisplayFor(model => garment.ColorName)
          </dd>

          <dt>
             @Html.DisplayNameFor(model => garment.ColorHexa)
          </dt>

          <dd>
             @Html.DisplayFor(model => garment.ColorHexa)
          </dd>

          <dt>
             @Html.DisplayNameFor(model => garment.Size)
          </dt>

          <dd>
             @Html.DisplayFor(model => garment.Size)
          </dd>
       }

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
