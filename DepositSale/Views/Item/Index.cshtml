@model IEnumerable<DepositSale.Models.Item>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Stock Database</h2>

<p>
   @Html.ActionLink("Create New Gament", "CreateGarment")
   @Html.ActionLink("Create New Other", "CreateOther")
</p>
<table class="table">
   <tr>
      <th>
         @Html.DisplayNameFor(model => model.Description)
      </th>
      <th>
         @Html.DisplayNameFor(model => model.CatalogPrice)
      </th>
      <th>
         @Html.DisplayNameFor(model => model.ItemType)
      </th>
      <th></th>
   </tr>

@foreach (var item in Model) {
   <tr>
      <td>
         @Html.DisplayFor(modelItem => item.Description)
      </td>
      <td>
         @Html.DisplayFor(modelItem => item.CatalogPrice)
      </td>
      <td>
         @Html.DisplayFor(modelItem => item.ItemType)
      </td>
      <td>
         @if (item.ItemType == DepositSale.Models.ItemType.Garment)
         {
            @Html.ActionLink("Edit", "EditGarment", new { id = item.ID }) <text>|</text>
         }
         else
         {
            @Html.ActionLink("Edit", "EditOther", new { id = item.ID }) <text>|</text>
         }
         @Html.ActionLink("Details", "Details", new { id = item.ID }) |
         @Html.ActionLink("Delete", "Delete", new { id = item.ID })
      </td>
   </tr>
}

</table>
